    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "cwd": "${workspaceFolder}",
            "justMyCode": true 
        },    
        {
            "name": "(1) Windows .venv Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${relativeFile}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
        }
    ]
}
